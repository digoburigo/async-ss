{
  "name": "create-t3-turbo",
  "private": true,
  "scripts": {
    "android": "expo run:android",
    "auth:generate": "pnpm -F @acme/auth generate",
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules .turbo",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @acme/zen-v3 push",
    "db:studio": "turbo -F @acme/zen-v3 studio",
    "dev": "turbo watch dev --continue",
    "dev:expo:android": "turbo watch dev:android -F @acme/expo...",
    "dev:expo:ios": "turbo watch dev:ios -F @acme/expo... -F @acme/server...",
    "dev:server": "turbo watch dev -F @acme/server...",
    "dev:spa": "turbo watch dev -F @acme/web... -F @acme/server...",
    "dev:start": "turbo watch dev -F @acme/tanstack-start...",
    "dev:web": "turbo watch dev -F @acme/web...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "postinstall": "pnpm lint:ws",
    "ios": "expo run:ios",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "pkgs:check": "pnpm dlx npm-check-updates --deep --concurrency 16",
    "pkgs:update": "pnpm dlx npm-check-updates --deep --concurrency 16 --upgrade",
    "ruler:apply": "pnpm dlx @intellectronica/ruler@latest apply --local-only",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add"
  },
  "prettier": "@acme/prettier-config",
  "devDependencies": {
    "@acme/prettier-config": "workspace:*",
    "@biomejs/biome": "2.3.10",
    "@turbo/gen": "^2.7.2",
    "dotenv-cli": "^11.0.0",
    "oxlint": "^1.36.0",
    "prettier": "catalog:",
    "turbo": "^2.7.2",
    "typescript": "catalog:",
    "ultracite": "6.5.1"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": "^24.12.0",
    "pnpm": "^10.26.1"
  },
  "pnpm": {
    "overrides": {
      "lightningcss": "1.30.1"
    }
  }
}
